<?xml version="1.0" encoding="UTF-8"?>

<?import com.lynden.gmapsfx.GoogleMapView?>
<?import eu.hansolo.tilesfx.Tile?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8.0.111"
          alignment="TOP_LEFT"
          fx:id="gridPane">

    <children>

        <Tile fx:id="pressureChart"
              skinType="SPARK_LINE"
              GridPane.columnIndex="0"
              GridPane.rowIndex="0"
              GridPane.columnSpan="1"/>
        <Tile fx:id="pressureGauge"
              skinType="GAUGE"
              GridPane.columnIndex="1"
              GridPane.rowIndex="0"/>
        <Tile fx:id="temperatureChart"
              skinType="SPARK_LINE"
              GridPane.columnIndex="0"
              GridPane.rowIndex="1"
              GridPane.columnSpan="1"/>
        <Tile fx:id="temperatureGauge"
              skinType="GAUGE"
              GridPane.columnIndex="1"
              GridPane.rowIndex="1"/>

        <GoogleMapView fx:id="mapView"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="2"
                       GridPane.columnSpan="2"
                       GridPane.rowSpan="2"/>

        <Tile fx:id="gpsTile"
              skinType="TEXT"
              GridPane.rowIndex="3"
              GridPane.columnIndex="2"
                GridPane.columnSpan="2"/>

        <HBox fx:id="pictureRegion"
              GridPane.rowIndex="3"
              GridPane.columnIndex="4"/>

        <Tile fx:id="voltageTile"
              skinType="GAUGE"
              GridPane.rowIndex="0"
              GridPane.columnIndex="4"/>

        <Tile fx:id="timeTile"
              skinType="TIME"
              GridPane.rowIndex="0"
              GridPane.columnIndex="2"/>

        <Tile fx:id="idTile"
              skinType="TEXT"
              GridPane.rowIndex="0"
              GridPane.columnIndex="3"/>

        <Tile fx:id="yawTile"
              skinType="TEXT"
              GridPane.rowIndex="1"
              GridPane.columnIndex="2"/>

        <Tile fx:id="pitchTile"
              skinType="TEXT"
              GridPane.rowIndex="1"
              GridPane.columnIndex="3"/>

        <Tile fx:id="rollTile"
              skinType="TEXT"
              GridPane.rowIndex="1"
              GridPane.columnIndex="4"/>

        <Tile fx:id="packetTile"
              skinType="TEXT"
              GridPane.rowIndex="2"
              GridPane.columnIndex="2"/>

        <Tile fx:id="altitudeTile"
              skinType="TEXT"
              GridPane.rowIndex="2"
              GridPane.columnIndex="3"/>

        <Tile fx:id="softwareTile"
              skinType="TEXT"
              GridPane.rowIndex="2"
              GridPane.columnIndex="4"/>

    </children>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="25.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="25.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="25.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="25.0" vgrow="SOMETIMES"/>
    </rowConstraints>
</GridPane>